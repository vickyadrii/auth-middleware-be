generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://root:postgres@localhost:5432/technical-test-indive"
}

model User {
  id          Int          @id @default(autoincrement())
  name        String
  email       String       @unique
  password    String
  is_verified Boolean?     @default(false)
  email_token String?
  profile     UserProfile?
}

model UserProfile {
  id              Int       @id @default(autoincrement())
  userId          Int       @unique
  photo_url       String?
  birth_date      DateTime?
  whatsapp_number String?
  address         String?
  occupation      String?
  user            User      @relation(fields: [userId], references: [id])
}
